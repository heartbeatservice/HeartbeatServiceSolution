@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/_NavLayout.cshtml";
}
<div id="page-wrapper" ng-controller="CompanyController" ng-init="init()">
    <div id="dashboard">
        <div class="panel">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Company Panel
                </h1>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <a href="#frmAdd" class="btn btn-warning" ng-click="clearCompany();" data-toggle="modal"><span class="glyphicon glyphicon-plus-sign"></span> Add New Company</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group has-warning">
                            <input class="form-control " ng-model="SearchParam" placeholder="Search By Company Name, or Description" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <button class="btn btn-warning" ng-click="CompanySearch();"><span class="glyphicon glyphicon-search "></span></button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="gridStyle" id="CompanyGrid" ng-grid="GridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Add-->
    <div class="modal fade " tabindex="-1" id="frmAdd">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header ">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 class="text-warning">Add Company</h4>
                </div>
                <form id="test2" name="test2" ng-submit="AddCompany();">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <span>Company Name</span>
                                    <input type="text" id="company" ng-model="Company.CompanyName" value="" required class="form-control" placeholder="Company Name" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <span>Description</span>
                                    <input id="Description" type="text" value="" ng-model="Company.Description" required class="form-control" placeholder="Description" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="module">
                                <label>Modules</label>
                                <div class="form-group">
                                    <div ng-repeat="m in AllModule" class="col-md-4">
                                        <input type="checkbox" checkbox-group checklist-model="Company.LstModules" checklist-value="m.ModuleId" />
                                        <span>{{m.ModuleName}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group  col-md-8">
                            <button class="btn btn-warning" class="form-control" type="submit"><span class="glyphicon glyphicon-user"></span> Save</button>
                            <a href="#" id="dismiss" class="btn btn-warning" data-dismiss="modal">Cancel</a>
                            <input class="btn btn-warning" type="button" value="Clear" ng-click="clearCompany();" />
                        </div>

                    </div>
                </form>
            </div>

        </div>


    </div>

    <!--Edit-->

    <a href="#frmEdit" id="editbtn" style="visibility:hidden" class="btn btn-default" data-toggle="modal"><span class="glyphicon glyphicon-plus-sign"></span> Edit Company</a>

    <div class="modal fade " tabindex="-1" id="frmEdit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header ">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 class="text-warning">View/Edit</h4>

                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <span>Company Name</span>
                                <input type="text" id="CompanyEdit" ng-model="Company.CompanyName" value="" class="form-control" placeholder="Company Name" />
                            </div>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <span>Description</span>
                                <input id="DescriptionEdit" type="text" value="" ng-model="Company.Description" class="form-control" placeholder="Description" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="module">
                            <label>Modules</label>
                            <div class="form-group">
                                <div ng-repeat="m in AllModule" class="col-md-4">
                                    <input type="checkbox" checkbox-group checklist-model="Company.LstModules" checklist-value="m.ModuleId" />
                                    <span>{{m.ModuleName}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="form-group  col-md-8">
                        <button class="btn btn-warning" class="form-control" ng-click="UpdateCompany();"><span class="glyphicon glyphicon-user"></span> Save</button>
                        <a href="#" id="dismissEdit" class="btn btn-warning" data-dismiss="modal">Cancel</a>
                        <input class="btn btn-warning" type="button" value="Clear" ng-click="clearCompany();" />

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>









